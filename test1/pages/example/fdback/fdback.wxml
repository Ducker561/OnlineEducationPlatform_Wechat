<!-- 意见反馈 -->
<view class="page">
  <form>
    <view class="page__bd">
      <view class="section">
        <textarea bindblur="bindTextAreaBlur" placeholder="说说您对我们的意见或建议，我们将不断改进，感谢您的支持！" name="advice"/>
      </view>
      <view class="section">
        <input type="number" style="background:#fff;width:100%;margin-top:16px;padding:8px 5px; border: 1px solid #ddd;" placeholder="留下您的联系方式，方便我们和您联系" name="phone"/>
      </view>
      <view class="section">
        <button form-type="submit" class="weui-btn" type="default" size="default" style="width:100%;margin-top:5%;">
          提交
        </button>
      </view>
    </view>
  </form>
</view>