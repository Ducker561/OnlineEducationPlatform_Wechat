page {
    background: #e8e8e8;
}
.container{
    padding:10rpx;
}
.course_detail {
    width: 300px;
    overflow: hidden;
    border-radius: 20px;
    margin: 0 auto;
    margin-top: 100rpx;
    background: #fff;
    box-shadow: 2px 5px 50px #200101;
}

.course_detail .course_wrapper {
    width: 100%;
    height: 180px;
}

.course_detail .publish {
    display: block;
    line-height: 4em;
    text-align: center;
    font-size: 24px;
    font-weight: bold;
}

.course_detail .course_title {
    /*减少字符间的留白*/
    letter-spacing: 0.1em;
    margin-bottom: 1em;
    padding: 0 0.5em;
    line-height: 1.5em;
}

.btn_box .btn {
    width: 120px;
    border: 1px solid #777777;
    margin: 20px auto;
    text-align: center;
    line-height: 3em;
    font-size: 12px;
    border-radius: 36px;
}

.btn_box .btn.learn_btn {
    background: #333333;
    color: #ffffff;
    border: 1px solid #222;
}

.btn_box .btn.card_btn {
    background: rgb(241, 223, 52);
    border: 1px solid #ffc12b;
}