.contain {
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
}

/*表格*/
.item {
  display: flex;
  flex-direction: row;
  padding: 10px;
  background: white;
  border-bottom: 0.5px solid lightgrey;
}

/*图标*/
.item .icon {
  width: 26px;
  height: 26px;
  margin-right: 10px;
}

/*文字*/
.item label {
  margin: 5px 0 0 10px;
  font-size: 15px;

  /*撑开label两边部分的距离*/
  flex: 1;

  /*垂直居中*/
  margin: auto;
}

/*箭头*/
.item .arrow {
  width: 8px;
  height: 9px;
  margin: auto;
  margin-top: 13px;
}

.item .line {
  background: lightgray;
  height: 0.5px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
  margin-top: 20rpx;
}

.userinfo-avatar {
  width: 160rpx;
  height: 160rpx;
}

.userinfo-nickname {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 14px;
}

.asset{
  display: flex;
  border-top:1px solid #eee;
  padding-top: 20rpx;
}

.asset .item{
  display: flex;
  flex-direction: column;
  width: 375rpx;
  text-align: center;
  font-size: 14px;
  line-height: 20px;
  color: #333;
}

.asset .right{
  border-left: 1px solid #eee;
}